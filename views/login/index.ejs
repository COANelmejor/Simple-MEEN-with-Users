  <script>
    $(document).ready(function () {
      $('#iniciar_sesion').click(function () {
        let user = $('#username').val()
        let password = String($('#password').val())

        let data = {
          username: user,
          password: password
        }

        $.ajax({
          url: '/api/login',
          method: 'POST',
          data: data,
          success: function () {
